{# templates/live/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Live Details{% endblock %}

{% block body %}
    <h1>{{ live.name }}</h1>
    <p>Streamer: {{ live.streamer }}</p>
    <p>Date: {{ live.date|date('Y-m-d H:i') }}</p>
    <p>Theme: {{ live.theme }}</p>

    <h2>Subscribe to Live Notification</h2>
    <form method="post" action="{{ path('live_show', { id: live.id }) }}">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit">Subscribe</button>
    </form>

    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.flashes('error') %}
        <div class="alert alert-danger">{{ flashMessage }}</div>
    {% endfor %}

    <a href="{{ path('lives_index') }}">Back to list</a>
{% endblock %}
