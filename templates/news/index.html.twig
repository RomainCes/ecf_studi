{# templates/news/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}News List{% endblock %}

{% block body %}
    <h1>News List</h1>
    <a href="{{ path('news_new') }}">Create new News</a>
    <ul>
        {% for news in news %}
            <li>
                <h2>{{ news.title }}</h2>
                <p>{{ news.content }}</p>
            </li>
        {% else %}
            <li>No news found</li>
        {% endfor %}
    </ul>
{% endblock %}
