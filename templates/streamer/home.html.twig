{# templates/streamer/home.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <h1>Page d'accueil</h1>

    <h2>RÃ©capitulatif des lives</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom du Live</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for live in lives %}
            <tr>
                <td>{{ live.id }}</td>
                <td>{{ live.name }}</td>
                <td>{{ live.date|date('Y-m-d H:i') }}</td>
                <td>
                    {% if live.date > "now"|date_modify('+1 day') %}
                        <a href="{{ path('edit_live', {id: live.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('streamer_live_form') }}">Ajouter un nouveau live</a>
{% endblock %}
